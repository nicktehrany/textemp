DOC = main
DEPS = main.tex main.bib

.PHONY: all clean view

all: report

report: clean $(DEPS)
	pdflatex $(DOC).tex
	bibtex $(DOC).aux
	pdflatex $(DOC).tex
	pdflatex $(DOC).tex

view: report
	xdg-open $(DOC).pdf

clean:
	$(RM) $(DOC).pdf *.blg *.bbl *.aux *.log *.dvi *.fdb_latexmk *.fls *.synctex.gz
